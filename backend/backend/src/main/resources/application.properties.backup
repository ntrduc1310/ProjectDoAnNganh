# d:\ProjectDoAnNganh2\backend\backend\src\main\resources\application.properties
server.port=8082
# server.servlet.context-path=/api  # DISABLED for easier testing
spring.application.name=task-management-backend
spring.profiles.active=local

# H2 Database
spring.datasource.url=jdbc:h2:mem:taskdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
spring.datasource.username=sa
spring.datasource.password=
spring.datasource.driver-class-name=org.h2.Driver

# JPA - Let Hibernate create tables automatically  
spring.jpa.database-platform=org.hibernate.dialect.H2Dialect
spring.jpa.hibernate.ddl-auto=create-drop
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# ✅ COMPLETELY DISABLE schema.sql
spring.sql.init.mode=never
spring.jpa.defer-datasource-initialization=false

# ✅ Fix H2 compatibility issues
spring.jpa.properties.hibernate.id.new_generator_mappings=false
spring.jpa.properties.hibernate.globally_quoted_identifiers=false

# H2 Console
spring.h2.console.enabled=true
spring.h2.console.path=/h2-console

# Logging
logging.level.com.doananganh.backend=INFO
